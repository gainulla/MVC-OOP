<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://kit.fontawesome.com/{{ key.fontawesome.embed_code }}.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="{{ url.for('main', 'css') }}">
    <title>MVC OOP</title>
</head>
<body>

    <header>
        <div class="wrap">
            <div>
                <img src="{{ url.for('dummy-logo', 'png') }}" alt="Logo" class="logo" />
            </div>
            <div class="row">
                <ul class="menu">
                    {% for item in menuReader.read(url, auth.isLoggedIn()) %}
                        <li class="menu__item">
                            <a href="{{ item.url }}">{{ item.text }}</a>
                        </li>
                    {% endfor %}
                </ul>
            </div>
        </div>
    </header>

    {% block content %}{% endblock %}

    <script src="{{ url.for('main', 'js') }}"></script>
</body>
</html>