<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.4/css/all.css" integrity="{{ key.fontawesome.integrity }}" crossorigin="anonymous">
    <link rel="stylesheet" href="{{ url.for('main', 'css') }}">
    <title>MVC OOP</title>
</head>
<body>

    <main class="expanse-girth">
        <div class="box">

            <ul class="menu">
            {% for item in menuReader.read(url, user.isLoggedIn()) %}
                <li class="menu__item">
                    <a href="{{ item.url }}">{{ item.text }}</a>
                </li>
            {% endfor %}
            </ul>

            {% block content %}{% endblock %}

        </div>
    </main>

    <script src="{{ url.for('main', 'js') }}"></script>
</body>
</html>